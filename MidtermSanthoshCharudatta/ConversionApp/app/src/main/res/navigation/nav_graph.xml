<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.conversionapp.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/input_screen">

        <!-- Define the action to navigate from FirstFragment to ResultActivity -->
        <action
            android:id="@+id/action_FirstFragment_to_ResultActivity"
            app:destination="@id/ResultActivity" />

    </fragment>

    <activity
        android:id="@+id/ResultActivity"
        android:name="com.example.conversionapp.ResultActivity"
        android:label="@string/result_activity_label"
        tools:layout="@layout/result_screen">
    </activity>
</navigation>
